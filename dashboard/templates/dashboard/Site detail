{% block extra_scripts %}
{% if forecast_days %}
<script>
(function() {
    const API_URL = '{% url "dashboard:chart_data" site.pk %}';
    const WORK_START = 7;
    const WORK_END = 18;

    // Colour palette
    const COLOURS = {
        risk:    { line: '#ef4444', fill: 'rgba(239,68,68,0.12)' },
        wind:    { line: '#0ea5e9', fill: 'rgba(14,165,233,0.12)' },
        gust:    { line: '#f59e0b', fill: 'rgba(245,158,11,0.12)' },
        precip:  { line: '#3b82f6', fill: 'rgba(59,130,246,0.12)' },
        temp:    { line: '#22c55e', fill: 'rgba(34,197,94,0.12)' },
        grid:    'rgba(148,163,184,0.15)',
        text:    '#94a3b8',
        cautionLine: 'rgba(245,158,11,0.5)',
        cancelLine:  'rgba(239,68,68,0.5)',
    };

    const charts = {};

    // =============================
    // FETCH DATA & BUILD CHARTS
    // =============================

    fetch(API_URL)
        .then(r => r.json())
        .then(data => {
            if (!data.hourly || data.hourly.length === 0) {
                document.getElementById('hourly-tbody').innerHTML =
                    '<tr><td colspan="6" class="loading-cell">No hourly data available.</td></tr>';
                return;
            }

            const labels = data.hourly.map(h => new Date(h.time));
            const thresholds = data.thresholds;

            buildRiskChart(labels, data.hourly);
            buildWindChart(labels, data.hourly, thresholds);
            buildPrecipChart(labels, data.hourly, thresholds);
            buildTempChart(labels, data.hourly, thresholds);
            buildTable(data.hourly);
        })
        .catch(err => {
            console.error('Failed to load forecast data:', err);
            document.getElementById('hourly-tbody').innerHTML =
                '<tr><td colspan="6" class="loading-cell">Failed to load forecast data.</td></tr>';
        });

    // =============================
    // CHART BUILDERS
    // =============================

    function commonScales(yLabel) {
        return {
            x: {
                type: 'time',
                time: { unit: 'hour', displayFormats: { hour: 'HH:mm' }, tooltipFormat: 'EEE dd MMM HH:mm' },
                grid: { color: COLOURS.grid },
                ticks: { color: COLOURS.text, maxRotation: 0, autoSkipPadding: 20 },
            },
            y: {
                title: { display: true, text: yLabel, color: COLOURS.text },
                grid: { color: COLOURS.grid },
                ticks: { color: COLOURS.text },
                beginAtZero: true,
            }
        };
    }

    function thresholdAnnotations(cautionVal, cancelVal, label) {
        return {
            annotation: {
                annotations: {
                    caution: {
                        type: 'line', yMin: cautionVal, yMax: cautionVal,
                        borderColor: COLOURS.cautionLine, borderWidth: 2, borderDash: [6, 4],
                        label: { display: true, content: label + ' Caution', position: 'start',
                                 backgroundColor: 'rgba(245,158,11,0.8)', font: { size: 10 } }
                    },
                    cancel: {
                        type: 'line', yMin: cancelVal, yMax: cancelVal,
                        borderColor: COLOURS.cancelLine, borderWidth: 2, borderDash: [6, 4],
                        label: { display: true, content: label + ' Cancel', position: 'start',
                                 backgroundColor: 'rgba(239,68,68,0.8)', font: { size: 10 } }
                    }
                }
            }
        };
    }

    function buildRiskChart(labels, hourly) {
        const ctx = document.getElementById('chart-risk').getContext('2d');
        charts.risk = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Risk Score (%)',
                    data: hourly.map(h => h.risk),
                    borderColor: COLOURS.risk.line,
                    backgroundColor: COLOURS.risk.fill,
                    fill: true,
                    tension: 0.3,
                    pointRadius: 0,
                    pointHitRadius: 8,
                    borderWidth: 2,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { labels: { color: COLOURS.text } },
                    tooltip: { mode: 'index', intersect: false },
                },
                scales: {
                    ...commonScales('Risk (%)'),
                    y: { ...commonScales('Risk (%)').y, max: 100 }
                },
            }
        });
    }

    function buildWindChart(labels, hourly, thresholds) {
        const ctx = document.getElementById('chart-wind').getContext('2d');
        charts.wind = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Wind Speed (m/s)',
                        data: hourly.map(h => h.wind_speed),
                        borderColor: COLOURS.wind.line,
                        backgroundColor: COLOURS.wind.fill,
                        fill: true, tension: 0.3, pointRadius: 0, pointHitRadius: 8, borderWidth: 2,
                    },
                    {
                        label: 'Gusts (m/s)',
                        data: hourly.map(h => h.wind_gusts),
                        borderColor: COLOURS.gust.line,
                        backgroundColor: COLOURS.gust.fill,
                        fill: false, tension: 0.3, pointRadius: 0, pointHitRadius: 8,
                        borderWidth: 2, borderDash: [4, 2],
                    },
                    {
                        label: 'Wind Caution (' + thresholds.wind_mean_caution + ' m/s)',
                        data: hourly.map(() => thresholds.wind_mean_caution),
                        borderColor: COLOURS.cautionLine, borderWidth: 1, borderDash: [6, 4],
                        pointRadius: 0, fill: false,
                    },
                    {
                        label: 'Wind Cancel (' + thresholds.wind_mean_cancel + ' m/s)',
                        data: hourly.map(() => thresholds.wind_mean_cancel),
                        borderColor: COLOURS.cancelLine, borderWidth: 1, borderDash: [6, 4],
                        pointRadius: 0, fill: false,
                    },
                    {
                        label: 'Gust Cancel (' + thresholds.gust_cancel + ' m/s)',
                        data: hourly.map(() => thresholds.gust_cancel),
                        borderColor: 'rgba(239,68,68,0.3)', borderWidth: 1, borderDash: [2, 4],
                        pointRadius: 0, fill: false,
                    },
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { labels: { color: COLOURS.text } },
                    tooltip: { mode: 'index', intersect: false },
                },
                scales: commonScales('Speed (m/s)'),
            }
        });
    }

    function buildPrecipChart(labels, hourly, thresholds) {
        const ctx = document.getElementById('chart-precip').getContext('2d');
        charts.precip = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Precipitation (mm/h)',
                        data: hourly.map(h => h.precipitation),
                        backgroundColor: hourly.map(h =>
                            h.precipitation >= thresholds.precip_cancel ? 'rgba(239,68,68,0.7)' :
                            h.precipitation >= thresholds.precip_caution ? 'rgba(245,158,11,0.7)' :
                            'rgba(59,130,246,0.7)'
                        ),
                        borderRadius: 2,
                    },
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { labels: { color: COLOURS.text } },
                    tooltip: { mode: 'index', intersect: false },
                },
                scales: commonScales('Precipitation (mm/h)'),
            }
        });
    }

    function buildTempChart(labels, hourly, thresholds) {
        const ctx = document.getElementById('chart-temp').getContext('2d');
        charts.temp = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Temperature (Â°C)',
                        data: hourly.map(h => h.temperature),
                        borderColor: COLOURS.temp.line,
                        backgroundColor: COLOURS.temp.fill,
                        fill: true, tension: 0.3, pointRadius: 0, pointHitRadius: 8, borderWidth: 2,
                    },
                    {
                        label: 'Temp Caution (' + thresholds.temp_min_caution + 'Â°C)',
                        data: hourly.map(() => thresholds.temp_min_caution),
                        borderColor: COLOURS.cautionLine, borderWidth: 1, borderDash: [6, 4],
                        pointRadius: 0, fill: false,
                    },
                    {
                        label: 'Temp Cancel (' + thresholds.temp_min_cancel + 'Â°C)',
                        data: hourly.map(() => thresholds.temp_min_cancel),
                        borderColor: COLOURS.cancelLine, borderWidth: 1, borderDash: [6, 4],
                        pointRadius: 0, fill: false,
                    },
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { labels: { color: COLOURS.text } },
                    tooltip: { mode: 'index', intersect: false },
                },
                scales: {
                    ...commonScales('Temperature (Â°C)'),
                    y: { ...commonScales('Temperature (Â°C)').y, beginAtZero: false }
                },
            }
        });
    }

    // =============================
    // HOURLY TABLE
    // =============================

    function buildTable(hourly) {
        const tbody = document.getElementById('hourly-tbody');
        let html = '';

        for (const h of hourly) {
            const d = new Date(h.time);
            const hour = d.getUTCHours();
            const isWork = (hour >= WORK_START && hour <= WORK_END);
            const dayStr = d.toLocaleDateString('en-GB', { weekday: 'short', day: 'numeric', month: 'short', timeZone: 'UTC' });
            const timeStr = String(hour).padStart(2, '0') + ':00';

            let riskClass = 'risk-cell-low';
            if (h.risk >= 50) riskClass = 'risk-cell-high';
            else if (h.risk >= 20) riskClass = 'risk-cell-medium';

            html += '<tr class="' + (isWork ? 'work-hour' : 'off-hour') + '">' +
                '<td>' + dayStr + ' ' + timeStr + '</td>' +
                '<td>' + h.wind_speed.toFixed(1) + ' <span class="spread">Â±' + h.wind_spread.toFixed(1) + '</span></td>' +
                '<td>' + h.wind_gusts.toFixed(1) + ' <span class="spread">Â±' + h.gust_spread.toFixed(1) + '</span></td>' +
                '<td>' + h.precipitation.toFixed(1) + '</td>' +
                '<td>' + h.temperature.toFixed(1) + '</td>' +
                '<td class="' + riskClass + '">' + h.risk.toFixed(0) + '%</td>' +
                '</tr>';
        }

        tbody.innerHTML = html;
    }

    // =============================
    // TAB SWITCHING
    // =============================

    document.querySelectorAll('.chart-tab').forEach(tab => {
        tab.addEventListener('click', function() {
            document.querySelectorAll('.chart-tab').forEach(t => t.classList.remove('active'));
            this.classList.add('active');

            const chartName = this.dataset.chart;
            document.querySelectorAll('.chart-container').forEach(c => c.style.display = 'none');
            document.getElementById('chart-' + chartName + '-container').style.display = 'block';

            // Resize chart on show
            if (charts[chartName]) charts[chartName].resize();
        });
    });

})();
</script>
{% endif %}
{% endblock %}
